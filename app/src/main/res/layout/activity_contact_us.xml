<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".contact_us"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#B6DFF8"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="-:Please Contact Here:-"
        android:textStyle="bold"
        android:textSize="25sp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Phone:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="normal"
           android:gravity="center_vertical"
           android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="+91 9953857495"
            android:onClick="toastclick_mobile"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="Email:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:onClick="toastclick_email"
            android:text="📧kaushalprajapati9953@gmail.com"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Whatsapp:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="📞+91 9953857495"
            android:textSize="20sp"
            android:onClick="toastclick"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

   <androidx.cardview.widget.CardView
       android:layout_width="250dp"
       android:layout_height="50dp"
       app:cardElevation="15dp"
       app:cardCornerRadius="20dp"
       android:layout_marginTop="80dp"
       android:layout_gravity="center"
       android:outlineSpotShadowColor="@color/white"
       android:outlineAmbientShadowColor="@color/white"
       >
       <TextView
           android:layout_width="250dp"
           android:layout_height="50dp"
           android:textAlignment="center"
           android:textStyle="normal"
           android:textColor="@color/white"
           android:textSize="20sp"
           android:text="Profile👍"
           android:onClick="Goto_home"
           android:background="#F47047"
           android:gravity="center"
           android:elevation="5dp"/>
   </androidx.cardview.widget.CardView>

</LinearLayout>